<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sauron_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A0FFB0"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/sauron_layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#A0FFB0" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#A0FFB0">

                <ImageView
                    android:id="@+id/sauron_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#A0FFB0"
                    android:gravity="center"
                    android:scrollbars="vertical"
                    android:text="Graph"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sauron_layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:weightSum="7">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#00FFFFFF"
                android:layout_weight="2"
                android:weightSum="11">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#00FFFFFF"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#A0FFB0"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sauron_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#00FFFFFF"
                    android:gravity="center"
                    android:textColor="#A0FFB0"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/sauron_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#00FFFFFF"
                    android:gravity="center"
                    android:textColor="#A0FFB0"
                    android:textSize="24sp"
                    android:textStyle="bold|italic" />
                <Spinner
                    android:id="@+id/sauron_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:visibility="gone" />
                <LinearLayout
                    android:id="@+id/sauron_row"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#00FFFFFF"
                    android:layout_weight="3"
                    android:weightSum="4">
                    <NumberPicker
                        android:id="@+id/sauron_item1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:textColor="#00FFFFFF"
                        android:focusable="true"
                        android:gravity="center"
                        android:scaleType="centerInside"
                        android:descendantFocusability="blocksDescendants"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColorHighlight="#00FFFFFF"
                        android:textColorHint="#00FFFFFF"
                        android:theme="@style/style04"
                        android:visibility="gone" />
                    <NumberPicker
                        android:id="@+id/sauron_item2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:textColor="#00FFFFFF"
                        android:focusable="true"
                        android:gravity="center"
                        android:descendantFocusability="blocksDescendants"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColorHighlight="#00FFFFFF"
                        android:textColorHint="#00FFFFFF"
                        android:theme="@style/style04"
                        android:visibility="gone" />
                    <NumberPicker
                        android:id="@+id/sauron_item3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:textColor="#00FFFFFF"
                        android:focusable="true"
                        android:gravity="center"
                        android:descendantFocusability="blocksDescendants"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColorHighlight="#00FFFFFF"
                        android:textColorHint="#00FFFFFF"
                        android:theme="@style/style04"
                        android:visibility="gone" />
                    <NumberPicker
                        android:id="@+id/sauron_item4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:textColor="#00FFFFFF"
                        android:focusable="true"
                        android:gravity="center"
                        android:descendantFocusability="blocksDescendants"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColorHighlight="#00FFFFFF"
                        android:textColorHint="#00FFFFFF"
                        android:theme="@style/style04"
                        android:visibility="gone" />
                    <NumberPicker
                        android:id="@+id/sauron_item5"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:textColor="#00FFFFFF"
                        android:focusable="true"
                        android:gravity="center"
                        android:descendantFocusability="blocksDescendants"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColorHighlight="#00FFFFFF"
                        android:textColorHint="#00FFFFFF"
                        android:theme="@style/style04"
                        android:visibility="gone" />
                    <NumberPicker
                        android:id="@+id/sauron_item6"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:textColor="#00FFFFFF"
                        android:focusable="true"
                        android:gravity="center"
                        android:descendantFocusability="blocksDescendants"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColorHighlight="#00FFFFFF"
                        android:textColorHint="#00FFFFFF"
                        android:theme="@style/style04"
                        android:visibility="gone" />
                    <NumberPicker
                        android:id="@+id/sauron_item7"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:textColor="#00FFFFFF"
                        android:focusable="true"
                        android:gravity="center"
                        android:descendantFocusability="blocksDescendants"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColorHighlight="#00FFFFFF"
                        android:textColorHint="#00FFFFFF"
                        android:theme="@style/style04"
                        android:visibility="gone" />
                    <NumberPicker
                        android:id="@+id/sauron_item8"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:textColor="#00FFFFFF"
                        android:focusable="true"
                        android:gravity="center"
                        android:descendantFocusability="blocksDescendants"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColorHighlight="#00FFFFFF"
                        android:textColorHint="#00FFFFFF"
                        android:theme="@style/style04"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:background="#00FFFFFF"
                android:weightSum="5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#00FFFFFF"
                    android:gravity="center"/>
                <Button
                    android:id="@+id/sauron_launch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:textColor="#FF0080"
                    android:textSize="30sp"
                    android:text="" />
                <Spinner
                    android:id="@+id/sauron_task"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#00FFFFFF"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2"
                android:background="#00FFFFFF"
                android:weightSum="7">

                <TextView
                    android:id="@+id/sauron_output"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:gravity="center|top"
                    android:textColor="#A0FFB0"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/sauron_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:background="#00FFFFFF"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>