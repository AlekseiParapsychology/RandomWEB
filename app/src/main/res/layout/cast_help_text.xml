<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sauron"
    android:background="@color/color04"
    android:layout_gravity="fill"
    android:layout_margin="0pt"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/object0301"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/color04"
        android:ems="10"
        android:gravity="right|bottom"
        android:inputType="textPersonName"
        android:maxLength="9"
        android:textColor="@color/color07"
        android:textSize="24sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1pt"
        android:layout_gravity="bottom|fill"
        android:gravity="bottom|start|fill">
        <TableRow
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:baselineAligned="true">

            <Button
                android:id="@+id/object0302"
                android:layout_width="30pt"
                android:layout_height="13pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/color06"
                android:onClick="calculatorFunction2"
                android:text="รท"
                android:textColor="@color/color07"
                android:textSize="18sp" />

            <Button
                android:id="@+id/object0303"
                android:layout_width="30pt"
                android:layout_height="13pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/color06"
                android:onClick="calculatorFunction2"
                android:text="-"
                android:textColor="@color/color07"
                android:textSize="18sp" />

            <Button
                android:id="@+id/object0304"
                android:layout_width="72dp"
                android:layout_height="13pt"
                android:layout_weight="1"
                android:background="@color/color06"
                android:onClick="calculatorFunction2"
                android:text="+"
                android:textColor="@color/color07"
                android:textSize="18sp" />
        </TableRow>
        <TableRow
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1pt"
            android:gravity="bottom"
            android:baselineAligned="true">

            <Button
                android:id="@+id/object0305"
                android:layout_width="30pt"
                android:layout_height="13pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/color06"
                android:onClick="calculatorFunction5"
                android:text="AC"
                android:textColor="@color/color07"
                android:textSize="18sp" />

            <Button
                android:id="@+id/object0306"
                android:layout_width="30pt"
                android:layout_height="13pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/color06"
                android:onClick="calculatorFunction2"
                android:text="X"
                android:textColor="@color/color07"
                android:textSize="18sp" />

            <Button
                android:id="@+id/object0307"
                android:layout_width="30pt"
                android:layout_height="13pt"
                android:layout_weight="1"
                android:background="@color/color06"
                android:minHeight="10dp"
                android:onClick="calculatorFunction3"
                android:text="="
                android:textColor="@color/color07"
                android:textSize="18sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1pt">

            <Button
                android:id="@+id/object0308"
                android:layout_width="30pt"
                android:layout_height="13pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/color05"
                android:onClick="calculatorFunction1"
                android:text="7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/object0309"
                android:layout_width="30pt"
                android:layout_height="13pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/color05"
                android:onClick="calculatorFunction1"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/object0310"
                android:layout_width="30pt"
                android:layout_height="13pt"
                android:layout_weight="1"
                android:background="@color/color05"
                android:onClick="calculatorFunction1"
                android:text="9"
                android:textSize="18sp" />
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1pt">
            <Button
                android:text="4"
                android:background="@color/color05"
                android:layout_width="30pt"
                android:layout_height="13pt"
                android:id="@+id/bu4"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="calculatorFunction1"
                android:layout_marginRight="1pt"/>

            <Button
                android:id="@+id/object0311"
                android:layout_width="30pt"
                android:layout_height="13pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/color05"
                android:onClick="calculatorFunction1"
                android:text="5"
                android:textSize="18sp" />
            <Button
                android:text="6"
                android:background="@color/color05"
                android:layout_width="30pt"
                android:layout_height="13pt"
                android:id="@+id/bu6"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="calculatorFunction1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1pt">

            <Button
                android:id="@+id/object0312"
                android:layout_width="30pt"
                android:layout_height="13pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/color05"
                android:onClick="calculatorFunction1"
                android:text="1"
                android:textSize="18sp" />
            <Button
                android:text="2"
                android:background="@color/color05"
                android:layout_width="30pt"
                android:layout_height="13pt"
                android:id="@+id/bu2"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="calculatorFunction1"
                android:layout_marginRight="1pt"/>

            <Button
                android:id="@+id/object0313"
                android:layout_width="74dp"
                android:layout_height="13pt"
                android:layout_weight="1"
                android:background="@color/color05"
                android:onClick="calculatorFunction1"
                android:text="3"
                android:textSize="18sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1pt">

            <Button
                android:id="@+id/object0314"
                android:layout_width="30pt"
                android:layout_height="13pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/color05"
                android:onClick="calculatorFunction1"
                android:text="."
                android:textSize="18sp" />

            <Button
                android:id="@+id/object0315"
                android:layout_width="30pt"
                android:layout_height="13pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/color05"
                android:minHeight="10dp"
                android:onClick="calculatorFunction1"
                android:text="0"
                android:textSize="18sp" />

            <Button
                android:id="@+id/object0316"
                android:layout_width="30pt"
                android:layout_height="13pt"
                android:layout_weight="1"
                android:background="@color/color05"
                android:minHeight="10dp"
                android:onClick="calculatorFunction4"
                android:text="%"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>
</LinearLayout>